/* FOR THE WEAPON */
= render 'shared/error_messages', :object => f.object 
.form
 .line
  .unit.size1of2
   = f.label :password
   %br/
   = f.password_field :password
  .unit.size1of2
   = f.label :password_confirmation, "Confirmation"
   %br/
   = f.password_field :password_confirmation
 .line
  .unit.size1of2
   = check_box_tag :weapon_ids, @weapon, @user.weapons.include?(@weapon), :name => 'user[weapon_ids][]'
   /= f.label :weapon_ids, (link_to weapon.weapon_name, weapon_path(weapon.id))