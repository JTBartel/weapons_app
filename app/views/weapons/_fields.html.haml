= render 'shared/error_messages', :object => f.object
.form
 .line 
  .unit.size1of2
   = f.label :weapon_name, "Weapon Name"
   %br/
   = f.text_field :weapon_name
  .unit.size1of2
   = f.label :weapon_nickname, "Nickname"
   %br/
   = f.text_field :weapon_nickname
 .line
  .unit.size1of1
   = f.label :remote_weapon_image_url, "Weapon Image"
   %br/
   = f.file_field :weapon_image
   = f.text_field :weapon_image_url
  .unit.size1of2
 .line
  .unit.size1of2
   = f.label :weapon_action, "Weapon Action"
   %br/
   = f.select(:weapon_action, [['Automatic',"Automatic"], ['Semi-Automatic',"Semi-Automatic"], ['Bolt Action',"Bolt Action"], ['Pump Action',"Pump Action"], ['Lever Action',"Lever Action"], ['Automatic',"Automatic"]])
  .unit.size1of2
   = f.label :round_cap, "Round Cap"
   %br/
   = f.text_field :round_cap
 .line
  .unit.size1of2
   = f.label :caliber, "Caliber"
   %br/
   = f.text_field :caliber
  .unit.size1of2
   = f.label :caliber_unit, "Units"
   %br/
   = f.select(:caliber_unit, [['mm',"mm"], ['Cal',"Cal"], ['mm NATO',"mm NATO"], ['gauge',"gauge"], ['Automatic',"Automatic"], ['Automatic',"Automatic"]])

 .line
  .unit.size1of2
   = f.label :rate_of_fire, "Rate of Fire"
   %br/
   = f.text_field :rate_of_fire
  .unit.size1of2
   = f.label :rof_units, "ROF Units"
   %br/
   = f.select(:rof_unit, [['min',"min"], ['sec',"sec"]])
 .line
  .unit.size1of2
   = f.label :max_range, "Max Range"
   %br/
   = f.text_field :max_range
  .unit.size1of2
   = f.label :max_range_unit, "Units"
   %br/
   = f.select(:max_range_unit, [['ft',"ft"], ['yds',"yds"], ['m',"m"]])
 .line
  .unit.size1of2
   = f.label :effective_range, "Effective Range"
   %br/
   = f.text_field :effective_range
  .unit.size1of2
   = f.label :effective_range_unit, "Units"
   %br/
   = f.select(:effective_range_unit, [['ft',"ft"], ['yds',"yds"], ['m',"m"]])
 .line
  .unit.size1of2
   = f.label :origin_country, "Country of Origin"
   %br/
   = f.text_field :origin_country
  .unit.size1of4
   = f.label :year_made, "Year Made"
   %br/
   = f.text_field :year_made, :style => 'width: 70px;'
  - if current_user.admin?
   .unit.size1of4
    = f.label :weapon_approval, "Approved"
    %br/
    = f.select(:weapon_approval, [['false', "false"], ['true', "true"]])
 .line
  .actions
   = f.submit "Add your weapon!"

